{
  "version": "0.2.0",
  "configurations": [
  
    
    
    {
      "name": "Next.js: dev",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "env": { "PORT": "3000" },
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (http://localhost:\\d+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    },
    {
      "name": "Next.js: build + start",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start"],
      "preLaunchTask": "npm: build",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (http://localhost:\\d+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    }
  ]
}
