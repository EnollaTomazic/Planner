{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@env": ["env/index.ts"],
      "@env/*": ["env/*"],
      "@storybook/react": ["types/storybook__react"],
      "ast-types": ["types/ast-types/index"],
      "ast-types/*": ["types/ast-types/*"]
    },
    "types": ["vitest/globals", "react", "node", "@playwright/test"],
    "plugins": [{ "name": "next" }],
    "incremental": true,
    "allowJs": true,
    "skipLibCheck": true
  }
}
